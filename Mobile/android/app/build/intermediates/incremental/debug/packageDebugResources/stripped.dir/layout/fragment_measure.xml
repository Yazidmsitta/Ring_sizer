<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.measure.MeasureFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/measure_ring"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMeasureRing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/measure_ring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMeasureFinger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/measure_finger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMeasureRing"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMeasureBracelet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/measure_bracelet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMeasureFinger"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvDiameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Diamètre: --"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMeasureBracelet" />

    <TextView
        android:id="@+id/tvCircumference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circonférence: --"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDiameter"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSizeEu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taille EU: --"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCircumference"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSizeUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taille US: --"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSizeEu"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>






